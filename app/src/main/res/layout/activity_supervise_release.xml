<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <include layout="@layout/item_title" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="8dp"
                android:layout_marginBottom="5dp"
                android:background="@color/background" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="13dp"
                android:layout_marginRight="13dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@mipmap/ic_stars"
                    android:drawablePadding="5dp"
                    android:drawableStart="@mipmap/ic_stars"
                    android:text="油站名称 ："
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_12" />

                <EditText
                    android:id="@+id/oilName"
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="13dp"
                    android:layout_marginRight="13dp"
                    android:layout_weight="1"
                    android:background="@drawable/edittext_bg"
                    android:maxLines="1"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_12" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="13dp"
                android:layout_marginRight="13dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@mipmap/ic_stars"
                    android:drawablePadding="5dp"
                    android:drawableStart="@mipmap/ic_stars"
                    android:text="油站地址 ："
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_12" />

                <EditText
                    android:id="@+id/oilAddress"
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="13dp"
                    android:layout_marginRight="13dp"
                    android:layout_weight="1"
                    android:background="@drawable/edittext_bg"
                    android:maxLines="1"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_12" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="13dp"
                android:layout_marginRight="13dp"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="13dp"
                    android:text="油站价格 ："
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_12" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="92#"
                            android:textColor="@color/black"
                            android:textSize="@dimen/sp_12" />

                        <EditText
                            android:id="@+id/size92Price"
                            android:layout_width="0dp"
                            android:layout_height="30dp"
                            android:layout_weight="1"
                            android:background="@drawable/edittext_bg"
                            android:ellipsize="end"
                            android:gravity="center"
                            android:inputType="numberDecimal"
                            android:maxLines="1"
                            android:textColor="@color/black"
                            android:textSize="@dimen/sp_12" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="95#"
                            android:textColor="@color/black"
                            android:textSize="@dimen/sp_12" />

                        <EditText
                            android:id="@+id/size95Price"
                            android:layout_width="0dp"
                            android:layout_height="30dp"
                            android:layout_weight="1"
                            android:background="@drawable/edittext_bg"
                            android:ellipsize="end"
                            android:gravity="center"
                            android:inputType="numberDecimal"
                            android:maxLines="1"
                            android:textColor="@color/black"
                            android:textSize="@dimen/sp_12" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="98#"
                            android:textColor="@color/black"
                            android:textSize="@dimen/sp_12" />

                        <EditText
                            android:id="@+id/size98Price"
                            android:layout_width="0dp"
                            android:layout_height="30dp"
                            android:layout_weight="1"
                            android:background="@drawable/edittext_bg"
                            android:ellipsize="end"
                            android:gravity="center"
                            android:inputType="numberDecimal"
                            android:maxLines="1"
                            android:textColor="@color/black"
                            android:textSize="@dimen/sp_12" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0&#160;#"
                            android:textColor="@color/black"
                            android:textSize="@dimen/sp_12" />

                        <EditText
                            android:id="@+id/size0Price"
                            android:layout_width="0dp"
                            android:layout_height="30dp"
                            android:layout_weight="1"
                            android:background="@drawable/edittext_bg"
                            android:ellipsize="end"
                            android:gravity="center"
                            android:inputType="numberDecimal"
                            android:maxLines="1"
                            android:textColor="@color/black"
                            android:textSize="@dimen/sp_12" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="-10#"
                            android:textColor="@color/black"
                            android:textSize="@dimen/sp_12" />

                        <EditText
                            android:id="@+id/size10Price"
                            android:layout_width="0dp"
                            android:layout_height="30dp"
                            android:layout_weight="1"
                            android:background="@drawable/edittext_bg"
                            android:ellipsize="end"
                            android:gravity="center"
                            android:inputType="numberDecimal"
                            android:maxLines="1"
                            android:textColor="@color/black"
                            android:textSize="@dimen/sp_12" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="-20#"
                            android:textColor="@color/black"
                            android:textSize="@dimen/sp_12" />

                        <EditText
                            android:id="@+id/size20Price"
                            android:layout_width="0dp"
                            android:layout_height="30dp"
                            android:layout_weight="1"
                            android:background="@drawable/edittext_bg"
                            android:ellipsize="end"
                            android:gravity="center"
                            android:inputType="numberDecimal"
                            android:maxLines="1"
                            android:textColor="@color/black"
                            android:textSize="@dimen/sp_12" />
                    </LinearLayout>
                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="13dp"
                android:layout_marginRight="13dp"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="13dp"
                    android:text="经&#160;纬&#160;度 ："
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_12" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="北纬 "
                            android:textColor="@color/black"
                            android:textSize="@dimen/sp_12" />

                        <EditText
                            android:id="@+id/latitudeLimit"
                            android:layout_width="0dp"
                            android:layout_height="30dp"
                            android:layout_marginLeft="13dp"
                            android:layout_weight="1"
                            android:background="@drawable/edittext_bg"
                            android:maxLines="1"
                            android:textColor="@color/black"
                            android:textSize="@dimen/sp_12" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="东经 "
                            android:textColor="@color/black"
                            android:textSize="@dimen/sp_12" />

                        <EditText
                            android:id="@+id/longitudeLimit"
                            android:layout_width="0dp"
                            android:layout_height="30dp"
                            android:layout_marginLeft="13dp"
                            android:layout_weight="1"
                            android:background="@drawable/edittext_bg"
                            android:maxLines="1"
                            android:textColor="@color/black"
                            android:textSize="@dimen/sp_12" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/tv_state"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="(当前经纬度已获取)"
                android:textColor="@color/gray"
                android:textSize="10sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:drawableLeft="@mipmap/ic_stars"
                android:drawablePadding="5dp"
                android:drawableStart="@mipmap/ic_stars"
                android:paddingLeft="13dp"
                android:paddingRight="13dp"
                android:text="问题反馈 ："
                android:textColor="@color/black"
                android:textSize="@dimen/sp_12" />

            <EditText
                android:id="@+id/probledFeedback"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="13dp"
                android:layout_marginRight="13dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/dr_problem_feedback"
                android:gravity="left"
                android:minHeight="100dp"
                android:padding="13dp"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_12" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:paddingLeft="13dp"
                android:paddingRight="13dp"
                android:text="图片上传 ："
                android:textColor="@color/black"
                android:textSize="@dimen/sp_12" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imgFile1"
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_marginLeft="13dp"
                    android:layout_marginRight="6dp"
                    android:layout_weight="1"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/ic_add_release_photo" />

                <ImageView
                    android:id="@+id/imgFile2"
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_marginLeft="6dp"
                    android:layout_marginRight="13dp"
                    android:layout_weight="1"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/ic_add_release_photo" />

            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
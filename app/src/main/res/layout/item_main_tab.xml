<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rl_home_tow_layout"
    android:layout_width="match_parent"
    android:layout_height="75dp"
    android:layout_alignParentBottom="true"
    tools:showIn="@layout/activity_main">

    <LinearLayout
        android:id="@+id/ll_home_tow_button"
        android:layout_width="fill_parent"
        android:layout_height="46dp"
        android:layout_gravity="bottom"
        android:background="@mipmap/tab_bg"
        android:baselineAligned="false"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <FrameLayout
            android:id="@+id/fragment_home"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <Button
                android:id="@+id/fragment_home_image"
                android:layout_width="21.0dip"
                android:layout_height="21.0dip"
                android:layout_gravity="top|center"
                android:layout_marginTop="5.0dip"
                android:background="@mipmap/ic_home" />

            <TextView
                android:id="@+id/fragment_home_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|center"
                android:layout_marginBottom="2.0dip"
                android:text="首页"
                android:textColor="@color/colorPrimary"
                android:textSize="9.0dip" />
        </FrameLayout>


        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1.0" />

        <FrameLayout
            android:id="@+id/fragment_my"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1">

            <Button
                android:id="@+id/fragment_my_image"
                android:layout_width="21.0dip"
                android:layout_height="21.0dip"
                android:layout_gravity="top|center"
                android:layout_marginTop="5.0dip"
                android:background="@mipmap/ic_my" />

            <TextView
                android:id="@+id/fragment_my_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|center"
                android:layout_marginBottom="2.0dip"
                android:text="我的"
                android:textColor="@color/text"
                android:textSize="9.0dip" />
        </FrameLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/fragment_administration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center|bottom"
        android:orientation="vertical">

        <Button
            android:id="@+id/bt_administration"
            android:layout_width="58dp"
            android:layout_height="58dp"
            android:layout_gravity="center"
            android:background="@mipmap/ic_consultation"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/tv_my_administration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center"
            android:layout_marginBottom="2.0dip"
            android:text="油站管理"
            android:textColor="@color/text"
            android:textSize="9.0dip" />
    </LinearLayout>
</FrameLayout>